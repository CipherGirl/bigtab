{
  "name": "bigtab",
  "version": "0.0.0",
  "private": true,
  "description": "Tab Management Chrome Extension",
  "keywords": [],
  "homepage": "https://github.com/intellibus/bigtab#readme",
  "bugs": {
    "url": "https://github.com/intellibus/bigtab/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intellibus/bigtab.git"
  },
  "license": "MIT",
  "scripts": {
    "format": "prettier --write ./**/*.ts ./**/*.tsx",
    "lint:fix": "eslint --fix ./**/*.ts ./**/*.tsx -f mo",
    "lint": "eslint ./**/*.ts ./**/*.tsx -f mo",
    "build": "vite build",
    "release": "cross-env NODE_ENV=production vite -c",
    "start": "vite",
    "test": "jest --passWithNoTests",
    "test:unit:ci": "DOTENV_CONFIG_PATH=./.env.test.local jest --ci --coverage --config=test/unit/jest.config.ts --passWithNoTests",
    "test:integration:ci": "DOTENV_CONFIG_PATH=./.env.test.local jest --ci --coverage --config=test/browser/e2e/jest.config.ts --passWithNoTests",
    "test:e2e:ci": "DOTENV_CONFIG_PATH=./.env.test.local jest --ci --coverage --config=test/browser/integration/jest.config.ts --passWithNoTests",
    "prepare": "husky install"
  },
  "dependencies": {
    "@extend-chrome/storage": "^1.5.0",
    "@xstate/immer": "^0.3.1",
    "@xstate/react": "^2.0.1",
    "immer": "^9.0.12",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "xstate": "^4.30.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/types": "^16.2.1",
    "@types/chrome": "^0.0.180",
    "@types/firefox-webext-browser": "^94.0.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@vitejs/plugin-react": "^1.3.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-mo": "^1.1.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "puppeteer": "^13.5.2",
    "rollup-plugin-chrome-extension": "^4.0.1-18",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "vite": "^2.9.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:react/recommended",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "airbnb-base",
      "airbnb/hooks",
      "airbnb-typescript/base",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "typescript": {}
      },
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "test/browser/bootstrap.ts",
            "**/*.test.ts",
            "**/*.test.tsx",
            "vite.config.ts"
          ]
        }
      ]
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.ts",
          "**/*.spec.tsx"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never",
          "tsx": "never"
        }
      ],
      "react/jsx-filename-extension": [
        "off",
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "test/browser/bootstrap.ts",
            "**/*.test.ts",
            "**/*.test.tsx",
            "vite.config.ts"
          ]
        }
      ],
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "error"
      ]
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "pretty-quick",
      "eslint --cache --fix -f mo"
    ],
    "**/*.tsx": [
      "pretty-quick",
      "eslint --cache --fix -f mo"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
